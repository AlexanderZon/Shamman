<% title = 'Shamman | ' + __('Usuarios') %>
<div class="m-b-md">
  <h3 class="m-b-none">Usuarios</h3>
</div>
<section class="panel panel-default">
  <div class="row wrapper">
    <div class="col-sm-5 m-b-xs">
      <h4>Listado de Usuarios</h4>
    </div>
    <div class="col-sm-4 m-b-xs">
    </div>
    <!--
    <div class="col-sm-3">
      <div class="input-group">
        <input type="text" class="input-sm form-control" placeholder="Search">
        <span class="input-group-btn">
        <button class="btn btn-sm btn-default" type="button">Go!</button>
        </span> </div>
    </div>
    -->
  </div>
  <div class="table-responsive">
    <table class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th class="th-sortable" data-toggle="class">Usuario <!-- <span class="th-sort"> <i class="fa fa-sort-down text"></i> <i class="fa fa-sort-up text-active"></i> <i class="fa fa-sort"></i> </span> --> </th>
          <th>Nombre para mostrar</th>
          <th>Correo</th>
          <th>Tipo de Usuario</th>
          <th width="30">Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% for (var i = 0 ; i < dataUsers.length ; i++) { %>
        <tr>
          <td><%= dataUsers[i].login %></td>
          <td><%= dataUsers[i].display_name %></td>
          <td><%= dataUsers[i].email %></td>
          <td><%= __(dataUsers[i].type) %></td>          
          <td>
          <% if(dataUsers[i].status == 'publish') { %>
            <a href="#" class="active"><i class="fa fa-check text-success text-active"></i></a>
          <% }else if(dataUsers[i].status == 'trash'){ %>
            <a href="#" class="active"><i class="fa fa-times text-danger text-active"></i></a>
          <% }else{ %>
            <a href="#" class="active"><i class="fa fa-times text-warning text-active"></i></a>
          <% } %>
            &nbsp;
            <a href="/admin/users/update/<%= dataUsers[i].id %>" class="active"><i class="fa fa-pencil text-warning text-active"></i></a>
            &nbsp;
          <% if(dataUsers[i].status == 'publish') { %>
            <a href="/admin/users/desactivate/<%= dataUsers[i].id %>" class="active"><i class="fa fa-trash-o text-danger text-active"></i></a>
          <% }else { %>
            <a href="/admin/users/activate/<%= dataUsers[i].id %>" class="active"><i class="fa fa-smile-o text-warning text-active"></i></a>
          <% } %>
          </td>
        </tr>
      <% } %>
      </tbody>
    </table>
  </div>
  <footer class="panel-footer">
    <div class="row">
      <div class="col-sm-4 hidden-xs">
      </div>
      <div class="col-sm-4 text-center"> <small class="text-muted inline m-t-sm m-b-sm"><%= dataUsers.length %> Resultados </small> </div>
      <!--
      <div class="col-sm-4 text-right text-center-xs">
        <ul class="pagination pagination-sm m-t-none m-b-none">
          <li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
        </ul>
      </div>
      -->
    </div>
  </footer>
</section>


<script src="/js/app.v1.js"></script>

