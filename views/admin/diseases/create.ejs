<section class="panel panel-default">
  <header class="panel-heading font-bold"> Formulario de registro de enfermedades </header>
  <div class="panel-body">
    <form class="form-horizontal" id="create_disease" method="post" action="/admin/diseases/create">
      <input type='hidden' name='_csrf' value='<%= _csrf %>'>
      <div class="form-group">
        <label class="col-sm-2 control-label"><%= __('Nombre de la Enfermedad') %></label>
        <div class="col-sm-10">
          <input id="title" name="title" type="text" class="form-control">
        </div>
      </div>
      <div class="line line-dashed b-b line-lg pull-in"></div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="input-id-1"><%= __('Descripción de la Enfermedad') %></label>
        <div class="col-sm-10">
          <input id="description" name="description" type="text" class="form-control">
        </div>
      </div>
      <div class="line line-dashed b-b line-lg pull-in"></div>
      <div class="form-group">
        <label class="col-sm-2 control-label"><%= __('Propiedades Médicas') %></label>
        <div class="col-sm-10">
          <select id="properties" name="properties" data-placeholder="<%= __('Seleccione las propiedades médicas de la enfermedad') %>" multiple class="chosen-select">
            <% for(var i = 0; i < properties.length ; i++){ %>
            <option value="<%= properties[i].id %>"><%= properties[i].title %></option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="line line-dashed b-b line-lg pull-in"></div>
      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
          <a href="/admin/diseases" class="btn btn-default"><%= __('Cancel') %></a>
          <input type="submit" class="btn btn-primary" value="<%= __('Save changes') %>" />
        </div>
      </div>
    </form>
  </div>
</section>


